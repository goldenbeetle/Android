<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goldenbeetle.learnenglishspellingsadv"
    android:versionCode="2"
    android:versionName="1.1" 
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission android:name="com.goldenbeetle.learnenglishspellings.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="com.strawberryapps.learnenglishspellings.permission.C2D_MESSAGE" />    

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name" >


        <activity
            android:name="com.goldenbeetle.learnenglishspellingsadv.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.goldenbeetle.learnenglishspellingsadv.HomeScreenActivity"
            android:label="Easy"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.goldenbeetle.learnenglishspellingsadv.SettingPrefs"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.goldenbeetle.learnenglishspellingsadv.EasyGameActivity"
            android:label="Easy"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.goldenbeetle.learnenglishspellingsadv.DifficultGameActivity"
            android:label="Hard"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.goldenbeetle.learnenglishspellingsadv.HelpActivity"
            android:label="Help"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.goldenbeetle.learnenglishspellingsadv.ScoreActivity"
            android:label="Score"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity android:name="com.google.android.gms.ads.AdActivity" android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>

</manifest>